<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    tools:context=".ClassifierInfoActivity" >

    <TextView
        android:id="@+id/txtClassifierType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtClassifierType"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTrainDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTrainDate"
        android:textAppearance="?android:attr/textAppearance" />

    <TextView
        android:id="@+id/txtTrainedFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTrainedFeatures"
        android:textAppearance="?android:attr/textAppearance" />

    <TextView
        android:id="@+id/lblValidationResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/validationResults"
        android:textAppearance="?android:attr/textAppearance" />

    <ScrollView
        android:id="@+id/scrollValidation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/txtValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12sp"
            android:typeface="monospace" />

    </ScrollView>

</LinearLayout>